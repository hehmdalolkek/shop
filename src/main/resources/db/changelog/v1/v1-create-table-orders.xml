<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1-3" author="hehmdalolkek">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="orders"/>
            </not>
        </preConditions>
        <createTable tableName="orders">
            <column name="order_id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="order_date" type="timestamp" defaultValueComputed="current_timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="total_cost" type="double"/>
        </createTable>
    </changeSet>

    <changeSet id="v1-4" author="hehmdalolkek">
        <preConditions onFail="MARK_RAN">
            <tableIsEmpty tableName="orders"/>
        </preConditions>
        <loadData tableName="orders" file="db/data/orders-data.csv"/>
    </changeSet>

</databaseChangeLog>