<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1-1" author="hehmdalolkek">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="products"/>
            </not>
        </preConditions>
        <createTable tableName="products">
            <column name="product_id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="price" type="float">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="v1-2" author="hehmdalolkek">
        <preConditions onFail="MARK_RAN">
            <tableIsEmpty tableName="products"/>
        </preConditions>
        <loadData tableName="products" file="db/data/products-data.csv"/>
    </changeSet>

</databaseChangeLog>